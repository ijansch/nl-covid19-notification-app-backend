{
  "ConnectionStrings": {
    "Content": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.Content.DatabaseName}#;Integrated Security=True;TrustServerCertificate=true"
  },
  "Certificates": {
    "NL": {
      "Thumbprint": "#{Deploy.DbProvision.NL2.CertificateThumbprint}#",
      "RootTrusted": false,
      "Chain": { "Path": "StaatDerNLChain-EV-Expires-2022-12-05.p7b" }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "#{Deploy.ManifestEngine.Elk.MinimumLevel}#",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "#{Deploy.ManifestEngine.Elk.EFCore.Level}#",
        "Microsoft.EntityFrameworkCore.ChangeTracking": "#{Deploy.ManifestEngine.Elk.EFCore.Level}#"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://#{Deploy.Elk.Elasticsearch.Username}#:#{Deploy.Elk.Elasticsearch.Password}#@#{Deploy.Elk.ElasticsearchUrl1}#;http://#{Deploy.Elk.Elasticsearch.Username}#:#{Deploy.Elk.Elasticsearch.Password}#@#{Deploy.Elk.ElasticsearchUrl2}#",
          "indexFormat": "covid-{0:yyyy.MM.dd}",
          "restrictedToMinimumLevel": "#{Deploy.ManifestEngine.Elk.Elastic.RestrictedToMinimumLevel}#"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "E:\\Log\\COVID\\ManifestEngine-%COMPUTERNAME%-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 209715200,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "ApplicationComponent": "ManifestEngine",
      "ApplicationIdentifier": "COVID"
    }
  }
}
