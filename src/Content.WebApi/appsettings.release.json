{
  "ConnectionStrings": {
    "Content": "Data Source=#{Common.DatabaseServer}#;Initial Catalog=#{Common.Content.DatabaseName}#;Integrated Security=True;TrustServerCertificate=true"
  },
  "ExposureKeySets": {
    "LifetimeDays": "#{Deploy.EksEngine.LifetimeDays}#"
  },
  "Content": {
    "ManifestCacheControl": "#{Deploy.EksEngine.ManifestCacheControl}#",
    "ImmutableContentCacheControl": "#{Deploy.EksEngine.ContentCacheControl}#",
    "DashboardDataCacheControl": "#{Deploy.EksEngine.DashboardDataCacheControl}#"
  },
  "TaskScheduling": {
    "DailyCleanupStartTime": "#{Deploy.CleanupJob.StartTime}#"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "#{Deploy.ContentApi.Elk.MinimumLevel}#",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "#{Deploy.ContentApi.Elk.EFCore.Level}#",
        "Microsoft.EntityFrameworkCore.ChangeTracking": "#{Deploy.ContentApi.Elk.EFCore.Level}#"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://#{Deploy.Elk.Elasticsearch.Username}#:#{Deploy.Elk.Elasticsearch.Password}#@#{Deploy.Elk.ElasticsearchUrl1}#;http://#{Deploy.Elk.Elasticsearch.Username}#:#{Deploy.Elk.Elasticsearch.Password}#@#{Deploy.Elk.ElasticsearchUrl2}#",
          "indexFormat": "covid-{0:yyyy.MM.dd}",
          "restrictedToMinimumLevel": "#{Deploy.ContentApi.Elk.Elastic.RestrictedToMinimumLevel}#"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "E:\\Log\\COVID\\ContentApi-%COMPUTERNAME%-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 209715200,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "ApplicationComponent": "ContentApi",
      "ApplicationIdentifier": "COVID"
    }
  }
}
